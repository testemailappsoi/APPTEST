{% extends 'base.html.twig' %}

{% block title %}Application index{% endblock %}

{% block body %}
<!-- Page Heading -->
        <div class="d-sm-flex align-items-center justify-content-between mb-4">
                <h1 class="h3 mb-0 text-gray-800">Liste des Applications</h1>
				
				{% if is_granted('ROLE_USER') %}
                    <a href="{{ path('app_application_new') }}" class="d-none d-sm-inline-block btn btn-sm btn-success shadow-sm">
					<i class="fas fa-plus-circle fa-sm text-white-50"></i> Nouveau</a>
                    
				{% endif %}
        </div>

<div class="card shadow mb-4">
	<div class="card-body">
		<div class="table-responsive">
			<table id="datatable" class="table table-striped table-bordered">
				<thead>
					<tr>
						<th>Nom</th>
						<th>Version</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for application in applications %}
						<tr>
							<td>{{ application.NomApp }}</td>
							<td>{{ application.Version }}</td>
							<td>
								<a href="{{ path('app_application_show', {'id': application.id}) }}"class="btn btn-info btn-circle btn-sm">
                                        <i class="fas fa-info-circle"></i></a>
								<a href="{{ path('app_application_edit', {'id': application.id}) }}" class="btn btn-primary btn-circle btn-sm">
                                        <i class="fa fa-pen"></i></a>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="4">no records found</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
</div>

     

{% endblock %}
