{% extends 'base.html.twig' %}

{% block title %}Fonc
{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-6 mx-auto">

			<h1>Fonctionnalité</h1>

			<table class="table">
				<tbody>
					<tr>
						<th>Application</th>
						<td>{{ fonc.rout.control.appli }}</td>
					</tr>
					<tr>
						<th>Controller</th>
						<td>{{ fonc.rout.control }}</td>
					</tr>
					<tr>
						<th>Route</th>
						<td>{{ fonc.rout }}</td>
					</tr>
					<tr>
						<th>Nom Fonctionnalité</th>
						<td>{{ fonc.NomFonc }}</td>
					</tr>
					<tr>
						<th>Autre</th>
						<td>{{ fonc.Autre }}</td>
					</tr>
				</tbody>
			</table>
			<div class="modal-footer">
				<a href="{{ path('app_fonc_index') }}" class="btn btn-secondary">Retour</a>
				<a class="btn btn-theme" href="{{ path('app_fonc_edit', {'id': fonc.id}) }}">Modifier</a>
				{{ include('fonc/_delete_form.html.twig') }}
			</div>
		</div>
	</div>
{% endblock %}

