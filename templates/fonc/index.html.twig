{% extends 'base.html.twig' %}

{% block title %}Fonc index{% endblock %}

{% block body %}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
                <h1 class="h3 mb-0 text-gray-800">Liste des Fonctionnalités</h1>
				
				{% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('app_fonc_new') }}" class="d-none d-sm-inline-block btn btn-sm btn-success shadow-sm">
					<i class="fas fa-plus-circle fa-sm text-white-50"></i> Nouveau</a>
                    
				{% endif %}
        </div>

    
    
    <table id ="datatable" class="table table-striped table-bordered" >
        <thead >
            <tr>
                <th>Application</th>
                <th>Fonctionnalité</th>
                <th>Autre</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
       
            {% for fonc in foncs %}
                <tr>
                    <td>{{ fonc.rout.control.appli }}</td>
                    <td>{{ fonc.NomFonc }}</td>
                    <td>{{ fonc.Autre }}</td>
                    <td>
                    <a href="{{ path('app_fonc_show', {'id': fonc.id}) }}" class="btn btn-info btn-circle btn-sm">
                                <i class="fas fa-info-circle"></i></a>
                    </td>
                    <td>
                        
                        {% if is_granted('ROLE_ADMIN') %}

						<a href="{{ path('app_fonc_edit', {'id': fonc.id}) }}" class="btn btn-primary btn-circle btn-sm">
                                <i class="fa fa-pen"></i></a>
                        {% endif %}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Vide</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
