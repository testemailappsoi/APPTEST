{% extends 'base.html.twig' %}

{% block title %}Control
{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-6 mx-auto">

			<h1>Control</h1>

			<table class="table">
				<tbody>
					<tr>
						<th>Application</th>
						<td>{{ control.appli.NomApp }}</td>
					</tr>
					<tr>
						<th>Nom Controlleur</th>
						<td>{{ control.NomCont }}</td>
					</tr>
				</tbody>
			</table>

			<div class="modal-footer">
				<a href="{{ path('app_control_index') }}" class="btn btn-secondary">Retour</a>
				<a class="btn btn-theme" href="{{ path('app_control_edit', {'id': control.id}) }}">Modifier</a>
				{{ include('control/_delete_form.html.twig') }}
			</div>
		</div>
	</div>


{% endblock %}

