{% extends 'base.html.twig' %}


{% block title %}Log in!{% endblock %}

{% block body  %}

<!-- Default Page Content (login form) -->
<div class="container">
	<div class="row justify-content-center">
		<div class="col-sm-12 col-md-5 col-lg-5">
			<div class="card o-hidden border-0 shadow-lg my-5">
				<div class="card-header">
					Connexion
				</div>
				<div class="card-body">
					<form class="user" method="post">
						{% if error %}
							<div id="notyf-message" class="error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
						{% endif %}

						{% if app.user %}
							<div class="mb-3">
								Vous êtes connecté en tant que
								{{ app.user.userIdentifier }},
								<a href="{{ path('app_logout') }}">Se déconnecter</a>
							</div>
						{% endif %}
						<div id="loginMessage"></div>
						<div class="form-group">
							<label for="loginUsername">Votre Cin</label>
							<input type="text" value="{{ last_username }}" name="Cin" id="inputMail" class="form-control form-control-user" placeholder="Entrer votre Cin..." required autofocus>
						</div>
						<div class="form-group">
							<label for="loginPassword">Mot de Passe</label>
							<input type="password" name="password" id="inputPassword" autocomplete="current-password" required class="form-control form-control-user" placeholder="Mot de passe">
						</div>
						<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
						<div class="form-group">
							<div class="custom-control custom-checkbox">
								<input type="checkbox" class="custom-control-input" id="customCheck">
								<label class="custom-control-label" for="customCheck">Remember Me</label>
							</div>
						</div>
						<button class="btn btn-primary btn-user btn-block" type="submit">
							Se connecter
						</button>

					</form>
					<hr>
					<div class="text-center">
						<a class="small" href="{{ url('app_liens') }}">Créer un liens de 5 jours</a>
					</div>
					<div class="text-center">
						<a class="small" href="{{ url('app_register') }}">Créer un compte!</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>


{% endblock %}