{% extends 'base.html.twig' %}

{% block title %}Question
{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-6 mx-auto">
			<div class="panel-body ">
				<div class="mail-header row">
					<div class="col-md-8">
						<h4 class="pull-left">
							Question
						</h4>
					</div>
					<div class="col-md-4"></div>
				</div>
				<div class="mail-sender">
					<div class="row">
						<div class="col-md-8">
							De
							<strong class="text-primary">{{ question.User }}
								{{ question.User.Prenom }}</strong>
						</div>
						<div class="col-md-4">
							<p class="date">
								<i class="fas fa-fw fa-mobile"></i>Contact :
								{{ question.User.Contact }}</p>
						</div>
					</div>
				</div>

				<div class="view-mail">
					<p>{{ question.Question }}</p>
					<div class="date ">
						<p class="date float-right">
							Le
							{{ question.DateQuest ? question.DateQuest|date('d-m-Y à H:i') : '' }}</p>
					</div>

				</div>
				{% if question.imageName %}
					<div class="attachment-mail">
						<ul>
							<li>
								<a class="atch-thumb" data-toggle="modal" data-target="#exampleModalCenter">
									<img src="{{vich_uploader_asset(question,'imageFile')}}"></a>

								<!-- Modal -->
								<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
									<div class="modal-dialog modal-dialog-centered" role="document">
										<div class="modal-content">

											<img src="{{vich_uploader_asset(question,'imageFile')}}" width="800 px"></a>

									</div>
								</div>
							</li>
						</div>
					</li>
				</li>
			</ul>
		</div>
	{% endif %}
	{% if question.Fonc %}
		<div class="mail-sender">
			<div class="row">
				<div class="col-md-8">
					<strong class="text-primary">{{ question.Fonc }}</strong>
					Dans
					<strong class="text-primary">{{ question.fonc.rout.control.appli.NomApp }}</strong>
				</div>
				<div class="col-md-4">
					<span>{{ question.fonc.rout.control }}/{{ question.fonc.rout.NomRout }}</span>
				</div>
			</div>
		</div>
	{% endif %}


	<div class="room-desk">
		<div class="room-box">
			<h5 class="text-primary">{{ question.Responsable }}
				{{ question.Responsable.Prenom }}</h5>
			<p>{{ question.Reponse }}</p>
			{% if question.imageR %}
				<a class="atch-thumb" data-toggle="modal" data-target="#exampleModalCenter" href="#">
					voir l'image</a>


				<!-- Modal -->
				<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
					<div class="modal-dialog modal-dialog-centered" role="document">
						<div class="modal-content">

							<img src="{{vich_uploader_asset(question,'imageRep')}}" width="800 px"></a>

					</div>
				</div>
			</div>
		{% endif %}
		<p>
			<span class="text-muted">
				<i class="fas fa-fw fa-mobile"></i>
				Contact :</span>
			{{ question.Responsable.Contact }}
			<span class="float-right text-muted">Le
				{{ question.updateAt ? question.updateAt|date('d-m-Y à H:i') : '' }}</p>
		</p>
	</span>
</div></div></div></div></div>{% endblock %}

