<span class="caret"></span></button><ul class="dropdown-menu" role="menu">
<li>
	<a href="{{ path('app_question_Cresponsable', {'id': question.id}) }}">Autre Responsable</a>
</li>
<li>
	<a href="{{ path('app_responsable_mail', {'id':question.id }) }}">Email</a>
</li></ul></div></div></div></div></div>{% endblock %}

